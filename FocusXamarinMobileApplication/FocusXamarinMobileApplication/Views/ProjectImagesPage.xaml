<?xml version="1.0" encoding="UTF-8"?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             xmlns:d="http://xamarin.com/schemas/2014/forms/design"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             NavigationPage.HasNavigationBar="false"             x:Class="FocusXamarinMobileApplication.Views.ProjectImagesPage"             mc:Ignorable="d"             Title="ProjectPictures">    <ContentPage.Resources>        <ResourceDictionary Source="StyleResource.xaml" />    </ContentPage.Resources>    <FlexLayout Direction="Column"                Padding="10"                HorizontalOptions="FillAndExpand"                BackgroundColor="#292F62">        <StackLayout Orientation="Horizontal" Padding="10">            <Button HeightRequest="40"                    WidthRequest="100"                    HorizontalOptions="Start"                    Text="Back"                    BackgroundColor="LightGray"                    TextColor="Black"                    Command="{Binding Back}" />            <ImageButton BackgroundColor="Transparent"                         HeightRequest="50"                         WidthRequest="100"                         HorizontalOptions="CenterAndExpand"                         Source="{Binding InputDiary}"                         Command="{Binding Annotate}" />            <ImageButton BackgroundColor="Transparent"                         HeightRequest="50"                         WidthRequest="100"                         HorizontalOptions="CenterAndExpand"                         Source="{Binding CameraImage}"                         Command="{Binding Photo}" />            <Button x:Name="btnCancel"                    Text="X"                    BackgroundColor="Red"                    TextColor="white"                    HorizontalOptions="End"                    Command="{Binding Delete}"                    WidthRequest="50"                    HeightRequest="40" />        </StackLayout>        <StackLayout Padding="10" FlexLayout.Basis="90%" Orientation="Vertical">            <CarouselView ItemsSource="{Binding Pictures}"                          CurrentItem="{Binding CurrentPicture}"                          PositionChangedCommand="{Binding UpdatePicCommnad}"                          VerticalOptions="FillAndExpand">                <CarouselView.ItemTemplate>                    <DataTemplate>                        <Frame HasShadow="True"                               BorderColor="DarkGray"                               CornerRadius="5"                               Margin="5"                               HorizontalOptions="FillAndExpand"                               VerticalOptions="EndAndExpand"                               FlexLayout.Basis="100%"                               BackgroundColor="#292F62">                            <FlexLayout Direction="Column">                                <StackLayout FlexLayout.Basis="100%">                                    <Image Source="{Binding PicturePathOnTablet}"                                           FlexLayout.Basis="50%"                                           HorizontalOptions="FillAndExpand"                                           VerticalOptions="FillAndExpand" />                                </StackLayout>                                <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">                                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">                                        <Label Text="{Binding Status}"                                               FontAttributes="Bold"                                               FontSize="16"                                               TextColor="White"                                               HorizontalOptions="Center"                                               VerticalOptions="Start" />                                    </StackLayout>                                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">                                        <Label Text="{Binding PictureReason}"                                               HorizontalOptions="Center"                                               VerticalOptions="Start"                                               TextColor="White" />                                        <Label Text="{Binding DateTimeTaken}"                                               HorizontalOptions="Center"                                               VerticalOptions="Start"                                               TextColor="White" />                                    </StackLayout>                                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">                                        <Label Text="{Binding PictureComments}"                                               FontAttributes="Italic"                                               HorizontalOptions="Center"                                               MaxLines="10"                                               TextColor="White"                                               VerticalOptions="Center"                                               LineBreakMode="TailTruncation" />                                    </StackLayout>                                </StackLayout>                            </FlexLayout>                        </Frame>                    </DataTemplate>                </CarouselView.ItemTemplate>            </CarouselView>        </StackLayout>        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" FlexLayout.Basis="5%">            <Button x:Name="btnSubmit" Text="Upload" Style="{DynamicResource buttonYesStyle}"                    Command="{Binding Upload}"                    HeightRequest="40"                    HorizontalOptions="FillAndExpand"                    IsVisible="{Binding ShowSubmit}" />        </StackLayout>        <StackLayout>            <Label Text="Please Wait..."                   FontSize="16"                   IsVisible="{Binding IsLoading}"                   HorizontalTextAlignment="Center" />            <ActivityIndicator                Color="White"                IsRunning="{Binding IsLoading}" />        </StackLayout>    </FlexLayout></ContentPage>