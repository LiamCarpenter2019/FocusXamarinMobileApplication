<?xml version="1.0" encoding="UTF-8"?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             NavigationPage.HasNavigationBar="false"             x:Class="FocusXamarinMobileApplication.Views.DailyDiaryPage">    <ContentPage.Resources>        <ResourceDictionary Source="StyleResource.xaml" />    </ContentPage.Resources>    <ContentPage.Content>        <FlexLayout Direction="Column" VerticalOptions="CenterAndExpand" BackgroundColor="#292F62" Padding="10"                        FlexLayout.Basis="100%">                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" HeightRequest="15" Margin="10">                    <Label Text="{Binding ProjectName}" VerticalTextAlignment="Center"                           HorizontalOptions="StartAndExpand" FontSize="Large" TextColor="White" />                    <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HeightRequest="20"                           HorizontalOptions="End" Text="{Binding DiaryTitle}" FontSize="Large"                           TextColor="White" />                    <Label Text="{Binding ProjectDate}" VerticalTextAlignment="Center" HorizontalOptions="End"                           FontSize="Large" TextColor="White" />                </StackLayout>                <StackLayout Orientation="Horizontal" Margin="10,0,10,10">                    <Button Text="Back" TextColor="Black" WidthRequest="100" HeightRequest="40"                            BackgroundColor="LightGray"                            Command="{Binding ReturnToDiarySelection}" />                    <Button Text="Weather" TextColor="Black" WidthRequest="100" HeightRequest="40"                            BackgroundColor="LightGray" HorizontalOptions="EndAndExpand"                            IsVisible="{Binding ShowWeatherButton}" Command="{Binding NavigateToWeatherEvents}" />                </StackLayout>                <StackLayout FlexLayout.Basis="10%" Padding="10">                    <Label Text="Start Location" FontAttributes="Bold" TextColor="White"                           IsVisible="{Binding ShowDiaryAddresses}" />                    <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand"                                 IsVisible="{Binding ShowDiaryAddresses}">                        <StackLayout IsVisible="{Binding ShowPickers}">                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="15%" Margin="0,5,0,0">                                <ListView x:Name="ListStartAbb" ItemsSource="{Binding Abbreviations}"                                          BackgroundColor="#1A142E"                                          ItemSelected="SelectedStartAbbreviation" SeparatorColor="White">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding Abb}"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="35%" Margin="5">                                <ListView x:Name="ListStartNumber" ItemsSource="{Binding StartStreet}"                                          BackgroundColor="#1A142E"                                          ItemSelected="SelectedStartAddress" SeparatorColor="White">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding BuildingNumber}"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="60%" Margin="5">                                <ListView x:Name="ListStartEndpoints" SeparatorColor="White"                                          ItemsSource="{Binding StreetList}" BackgroundColor="#1A142E"                                          ItemSelected="SelectedStartStreet">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding Key}" FlexLayout.Basis="100%"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                        </StackLayout>                        <StackLayout Orientation="Horizontal" FlexLayout.Basis="90%" HorizontalOptions="FillAndExpand"                                     IsVisible="{Binding ShowAddressTxtBox}">                            <Editor FlexLayout.Basis="100%" VerticalOptions="FillAndExpand"                                    Text="{Binding StartAddressText}" HorizontalOptions="FillAndExpand"                                    BackgroundColor="#1A142E"                                    IsReadOnly="{Binding StartAddressesEditable}" />                        </StackLayout>                        <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="10%" Padding="2">                            <ImageButton BackgroundColor="Transparent" Source="{Binding CameraImage}"                                         HeightRequest="50" WidthRequest="50" VerticalOptions="CenterAndExpand"                                         IsVisible="{Binding PhotoButtonVisible}"                                         Clicked="OnStartPhotoImageButtonClicked" />                        </StackLayout>                    </StackLayout>                </StackLayout>                <StackLayout FlexLayout.Basis="35%" IsVisible="{Binding ShowDiaryText}" Padding="10">                    <Label Text="Diary Text" FontAttributes="Bold" TextColor="White" />                    <Editor VerticalOptions="FillAndExpand" Text="{Binding DisplayText}"                            BackgroundColor="#1A142E" TextColor="White"/>                </StackLayout>                <StackLayout FlexLayout.Basis="25%" IsVisible="{Binding ShowExampleText}" Padding="10">                    <Label Text="{Binding ExampleTextLabel}" FontAttributes="Bold" TextColor="White" />                    <Editor FlexLayout.Basis="100%" VerticalOptions="FillAndExpand"                            Text="{Binding ExampleText}" BackgroundColor="#1A142E" TextColor="White"                            IsReadOnly="{Binding ExampleTextEditiable}" />                </StackLayout>                <StackLayout FlexLayout.Basis="12%" IsVisible="{Binding ShowExampleText}" Padding="10">                    <Label Text="End Location" FontAttributes="Bold" TextColor="White"                           IsVisible="{Binding ShowDiaryAddresses}" />                    <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand"                                 HorizontalOptions="FillAndExpand" IsVisible="{Binding ShowDiaryAddresses}">                        <StackLayout IsVisible="{Binding ShowPickers}" FlexLayout.Basis="90%">                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="15%" Margin="0,5,0,0">                                <ListView x:Name="ListEndAbb" ItemsSource="{Binding Abbreviations}"                                          BackgroundColor="#1A142E" SeparatorColor="White"                                          ItemSelected="SelectedEndAbbreviation">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding Abb}"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="35%" Margin="5">                                <ListView x:Name="ListEndNumber" SeparatorColor="White"                                          ItemsSource="{Binding EndStreet}" BackgroundColor="#1A142E"                                          ItemSelected="SelectedEndAddress">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding BuildingNumber}"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                            <StackLayout VerticalOptions="FillAndExpand" FlexLayout.Basis="60%" Margin="5">                                <ListView x:Name="ListEndEndpoints" SeparatorColor="White"                                          ItemsSource="{Binding StreetList}" BackgroundColor="#1A142E"                                          ItemSelected="SelectedEndStreet">                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <FlexLayout>                                                    <Label Text="{Binding Key}" FlexLayout.Basis="100%"                                                           VerticalTextAlignment="Center"                                                           HorizontalTextAlignment="Center" />                                                </FlexLayout>                                            </ViewCell>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </StackLayout>                        </StackLayout>                        <StackLayout Orientation="Horizontal" FlexLayout.Basis="90%" HorizontalOptions="FillAndExpand"                                     IsVisible="{Binding ShowAddressTxtBox}">                            <Editor FlexLayout.Basis="100%" VerticalOptions="FillAndExpand"                                    HorizontalOptions="FillAndExpand" Text="{Binding EndAddressText}"                                    BackgroundColor="#1A142E" TextColor="White"                                    IsReadOnly="{Binding StartAddressesEditable}" />                        </StackLayout>                        <StackLayout FlexLayout.Basis="10%" Padding="2">                            <ImageButton BackgroundColor="Transparent" Source="{Binding CameraImage}"                                         HeightRequest="50" WidthRequest="50" IsVisible="{Binding PhotoButtonVisible}"                                         Clicked="OnEndPhotoImageButtonClicked" />                        </StackLayout>                    </StackLayout>                </StackLayout>                <StackLayout Orientation="Horizontal" FlexLayout.Basis="5%" VerticalOptions="EndAndExpand">                    <Button Text="{Binding SubmitButtonText}" TextColor="Black" BackgroundColor="green"                            FlexLayout.Basis="100%" HeightRequest="40" HorizontalOptions="FillAndExpand"                            Command="{Binding DiarySubmit}" />                </StackLayout>            </FlexLayout>    </ContentPage.Content></ContentPage>